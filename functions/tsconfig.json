{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "types": ["@cloudflare/workers-types/experimental"],
    "paths": {
      "@function/*": ["./*"],
      "@common/*": ["../common/*"]
    },
    "strict": true,
    "noImplicitAny": true
  },
  "include": [".", "../common"],
  "exclude": ["../src/**/*"]
}
